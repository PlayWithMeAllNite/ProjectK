<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.view.LoginController">
   <children>
      <Text text="Ювелирная мастерская" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
      <Text text="Вход в систему" style="-fx-font-size: 18; -fx-fill: #7f8c8d;" />
      
      <VBox spacing="10" maxWidth="300" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
         <children>
            <Label text="Логин:" />
            <TextField fx:id="usernameField" promptText="Введите логин" />
            
            <Label text="Пароль:" />
            <PasswordField fx:id="passwordField" promptText="Введите пароль" />
            
            <HBox spacing="10" alignment="CENTER">
               <children>
                  <Button text="Войти" onAction="#handleLogin" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                  <Button text="Отмена" onAction="#handleCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
               </children>
            </HBox>
            
            <Label fx:id="messageLabel" text="" style="-fx-text-fill: #e74c3c;" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox> 